<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Notifications.SetupPage"
             Title="Setup">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Request Permissions (iOS Only)"
                    Command="{Binding PermissionCheck}" />

            <Label Text="Date" />
            <DatePicker Date="{Binding SelectedDate}" />

            <Label Text="Time" />
            <TimePicker Time="{Binding SelectedTime}" />

            <Button Text="Send Scheduled Notification"
                    Command="{Binding SendScheduled}" />

            <Button Text="Send Immediate Notification"
                    Command="{Binding SendImmediate}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>