<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Jobs.CreatePage"
             xmlns:jobs="clr-namespace:Samples.Jobs"
             x:DataType="jobs:CreateViewModel"
             Style="{StaticResource ContentPage}"
             Title="Create">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TableView Intent="Form" Grid.Row="0">
                <TableSection>
                    <TextCell Text="Status" Detail="{Binding AccessStatus}" />
                </TableSection>

                <TableSection>
                    <EntryCell Label="Job Identifier"
                               Text="{Binding JobName}" />

                    <EntryCell Label="Seconds to Run"
                               Text="{Binding SecondsToRun}"
                               Keyboard="Numeric" />

                    <TextCell Text="Run As Task"
                              Command="{Binding RunAsTask}" />
                </TableSection>

                <TableSection Title="Criteria">
                    <TextCell Text="Required Internet Access"
                              Detail="{Binding RequiredInternetAccess}"
                              Command="{Binding ChangeRequiredInternetAccess}" />
                    <SwitchCell Text="Battery Not Low" On="{Binding BatteryNotLow}" />
                    <SwitchCell Text="Peripheral Charging" On="{Binding DeviceCharging}" />
                    <SwitchCell Text="Repeat" On="{Binding Repeat}" />
                </TableSection>

                <!--<TableSection Title="Foreground Triggers">
                    <EntryCell Label="Interval (seconds)" Text="{Binding FgInterval}" />

                    <SwitchCell Text="App Start" On="{Binding FgAppStart}" />
                    <SwitchCell Text="App Backgrounding" On="{Binding FgAppBackgrounding}"/>
                    <SwitchCell Text="App Resuming" On="{Binding FgAppResuming}" />

                    <SwitchCell Text="Device Charging" On="{Binding FgDeviceCharging}" />
                    <SwitchCell Text="Internet Available (Any)" On="{Binding FgInternetAvailAny}" />
                    <SwitchCell Text="Internet Available (Direct)" On="{Binding FgInternetAvailDirect}" />
                </TableSection>-->
            </TableView>

            <Button Text="Create Job"
                    Command="{Binding CreateJob}"
                    Grid.Row="1" />
        </Grid>
    </ContentPage.Content>
</ContentPage>