<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Beacons.CreatePage"
             Style="{StaticResource ContentPage}"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Create" Command="{Binding Create}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <TableView Intent="Form" Grid.Row="0">
            <TableSection>
                <EntryCell Label="Identifier" Text="{Binding Identifier}" />
                <EntryCell Label="Uuid" Text="{Binding Uuid}" Keyboard="Text" />
                <EntryCell Label="Major" Text="{Binding Major}" Keyboard="Numeric" />
                <EntryCell Label="Minor"
                            Text="{Binding Minor}"
                            Keyboard="Numeric"
                            IsEnabled="{Binding IsMajorSet}" />
            </TableSection>

            <TableSection>
                <TextCell Text="Estimote Defaults" Command="{Binding EstimoteDefaults}" />
            </TableSection>
        </TableView>
    </ContentPage.Content>
</ContentPage>